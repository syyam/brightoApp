<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetailActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLayout"
        android:orientation="horizontal"
        android:background="#4ccfff"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/accountImageButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:baselineAlignBottom="false"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/accountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:ems="10"
                android:text="Govt. Kot Khawaja Saeed teaching Hospital Hobs"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Lahore"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:ems="10"
                    android:text="22 Jan 2019"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:layout_width="102dp"
                    android:layout_height="30dp"
                    android:text="Download"
                    android:background="@drawable/roundedbutton"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="102dp"
                    android:layout_height="30dp"
                    android:text="Share"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/roundedbuttonwhite"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/jobBanner"
        android:layout_below="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/job"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:background="@android:drawable/ic_search_category_default" />


</RelativeLayout>